<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove="Views\**\*.cs" />
    <Compile Include="Views\**\*.cs" DependentUpon="%(Filename).cshtml" />
    <EmbeddedResource Include="Templates\Email\Welcome.cshtml" />
    <EmbeddedResource Include="Views\**\*.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  
  
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.9" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="6.0.9" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="6.0.9" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="RazorLight" />
  </ItemGroup>
  
  
  <ItemGroup>
    <PackageVersion Update="Microsoft.AspNetCore.Components.Web" Version="8.0.7" />
    <PackageVersion Update="Microsoft.Extensions.FileProviders.Embedded" Version="8.0.7" />
  </ItemGroup>
  
  
  <ItemGroup>
    <None Include="Templates\Email\Shared\EmailButton.cshtml" />
    <None Include="Templates\Email\Shared\EmailLayout.cshtml" />
    <None Include="Templates\Email\_ViewStart.cshtml" />
  </ItemGroup>
  
</Project>
